<!DOCTYPE html>
<html>
  <head>
    <title>WarehouseControl</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap via CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3pV0n4z7NmJ9Bie5vau0J2QpNRyzqMnDZ9C3wlM1tyXxPx6mno5JvVym1J" crossorigin="anonymous">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <style>
    body {
      background-color: #f8f9fa; /* Exemplo de cor de fundo */
    }
    header, footer {
      background-color: #007bff; /* Cor do cabeçalho e rodapé */
      color: white;
    }
    .nav-link {
      color: white;
    }
    .nav-link:hover {
      color: #f8f9fa;
    }
  </style>
  <body data-turbolinks="false">
    <header class="d-flex flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
        <a href="#" class="d-inline-flex align-items-center mb-2 mb-lg-0 text-body-emphasis text-decoration-none">
          <img src="/open-cardboard-box.svg" alt="Your Logo" width="40" height="32">
        </a>
      </div>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
        <li><%= link_to 'Materials', materials_path, class: 'nav-link px-2' %></li>
        <li><%= link_to 'Logs', material_logs_path, class: 'nav-link px-2' %></li>
      </ul>

      <div class="col-md-3 text-end">
        <% if !user_signed_in? %>
          <%= link_to "Login", root_path, class: "btn btn-primary me-2" %>
          <%= link_to "Cadastre-se", new_user_registration_path, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Profile", edit_user_registration_path, class: "btn btn-primary me-2" %>
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-danger", form_class: "d-inline" %>
        <% end %>
      </div>
    </header>

    <div class="container-fluid py-4">
      <% if notice.present? %>
        <p class="notice alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-warning"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>

    <!-- Bootstrap JavaScript e dependências -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <footer class="border-top">
        <span class="mb-3 mb-md-0 text-body-secondary">© 2024 WarehouseControl</span>
    </footer>
  </body>
</html>
